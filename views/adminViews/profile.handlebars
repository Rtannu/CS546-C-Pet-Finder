<form id="updateProfile" method="post" action="/admin/adminProfile" style="border:1px solid #ccc" onsubmit="updateProfile(event)">
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center" colspan="4">Admin Details</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-start">
                        <label for="first-name"><b>First Name</b></label>

                        <div><input type="text" placeholder="Enter First Name" name="firstName" id="first-name"
                                pattern="[a-zA-Z ]+$" title="Only space and alphabet are allowed" disabled value={{adminProfile.firstName}} /></div>
                       
                    </td>
                    <td class="text-start">
                        <label for="middle-name"><b>Middle Name</b></label>

                        <div>
                            <input type="text" placeholder="Enter Middle Name" name="middleName" id="middle-name"
                                pattern="[a-zA-Z ]+$" title="Only space and alphabet are allowed" disabled value={{adminProfile.middleName}} />
                        </div>
                        
                    </td>
                    <td class="text-start">
                        <label for="last-name"><b>Last Name</b></label>
                    
                        <div>
                            <input type="text" placeholder="Enter Last Name" name="lastName" id="last-name"
                                pattern="[a-zA-Z ]+$" title="Only space and alphabet are allowed" disabled value={{adminProfile.lastName}} />
                        </div>

                    </td>
                     <td class="text-start">
                        <label for="email"><b>Email</b></label>
                        <div>
                            <input type="email" placeholder="Enter Email" name="email" id="email"
                                pattern="^[-!#$%&'*+\/0-9=?A-Z^_a-z`{|}~](\.?[-!#$%&'*+\/0-9=?A-Z^_a-z`{|}~])*@[a-zA-Z0-9](-*\.?[a-zA-Z0-9])*\.[a-zA-Z](-?[a-zA-Z0-9])+$"
                                title="Invalid email format" disabled value={{adminProfile.email}} />
                        </div>

                    </td>
                </tr>
                <tr>
                    <td class="text-start">
                        <label for="phone-number"><b>Phone Number</b></label>
                        <div>
                            <input type="text" placeholder="Enter Phone Number" name="phoneNumber" id="phone-number"
                                pattern="^\d{3}[-]\d{3}[-]\d{4}$" title="Invalid phone number format" disabled value ={{adminProfile.phoneNumber}} />
                        </div>
                       
                    </td>
                   
                    <td class="text-start">
                        <label for="address"><b>Address</b></label>
                        <div>
                            <input type="text" placeholder="Enter Address" name="address" id="address"
                                pattern="^[0-9a-zA-Z ,:-]+$"
                                title="Only digits, alphabet, space, comma, colon and hyphen are allowed" disabled value ={{adminProfile.address}} />
                        </div>
                       
                    </td>
                    <td class="text-start">
                        <label for="city"><b>City</b></label>
                        <div>
                            <input type="text" placeholder="Enter City" name="city" id="city"
                                title="Only space and alphabet are allowed" pattern="[a-zA-Z ]+$" disabled value ={{adminProfile.city}} />
                        </div>
                        
                    </td>
                </tr>
                <tr>
                    <td class="text-start">
                        <label for="state"><b>State</b></label>
                        <div> <input type="text" placeholder="Enter State" name="state" id="state"
                                title="Only space and alphabet are allowed" pattern="[a-zA-Z ]+$" disabled value ={{adminProfile.state}} />
                        </div>
                    

                    </td>
                    <td class="text-start">
                        <label for="zip"><b>Zip</b></label>
                        <div>
                            <input type="text" placeholder="Enter Zip" name="zip" id="zip"
                                title="Only integer is allowed" pattern="^[0-9]+$" disabled value={{adminProfile.zip}} />
                        </div>
                    </td>
               
            </tbody>
        </table>
    </div>
</form>

<script src="https://code.jquery.com/jquery-2.2.4.min.js"
