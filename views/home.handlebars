<!-- The body for the homepage -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Welcome to Pet Finder!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <p class="text-center">
                This website is for pet owners to find other pet owners who are also looking for pets.
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <p class="text-center">
                Please search for pets by city and pet type.
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form class="form-inline" action="/search" method="POST">
                <div class="form-group mb-2">
                    <label for="city" class="sr-only">City</label>
                    <input type="text" class="form-control" id="city" name="city" placeholder="City">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <label for="state" class="sr-only">State</label>
                    <select class="form-control" id="state" name="state">
                        <option value="AL">Alabama</option>
